<h1>Comments#index</h1>
<p>Find me in app/views/comments/index.html.erb</p>

<div class="container">
<%= link_to "Add Comment", new_comment_path, class: "btn btn-danger" %>
    <table class="table mt-4">
        <tr>
            <td>Comments</td>
        </tr>
        <% @comments.each do |comment| %>
        <tr>
            <td><%= comment.comment_text %></td>
            <td><%= link_to "Edit", edit_post_comment_path(Post.find(comment.post_id), comment), class: "btn btn-warning" %>
            <%= link_to "Delete Comment", comment_path(comment), method: "delete", data:{ confirm: "Are you sure you want to delete this comment"}, class: "btn btn-danger" %></td>
        </tr>
        <% end %>
    </table>
</div>