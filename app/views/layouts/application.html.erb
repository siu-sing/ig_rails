<!DOCTYPE html>

<html>
  <head>
    <title>Instagram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

	<% if notice %>
	<p class="notice alert alert-success" style="margin:0;"><%= notice %></p>
	<% end %>

	<% if alert %>
	<p class="alert alert alert-danger" style="margin:0;"><%= alert %></p>
	<% end %>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <%# <a class="navbar-brand" href="#">FPQ</a> %>
  <%= link_to  "FPQ", posts_path(@posts), class: "navbar-brand" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav mr-auto">
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
	    <%#= current_user.email %>
      <li class="nav-item">
      <%= link_to "New Post", new_post_path, class:"text-decoration-none text-secondary" %>
      </li>
      <li class="nav-item">
        <%= link_to current_user.firstname, user_path(current_user), class:"text-decoration-none text-secondary mx-4" %>
      </li>
      <li class="nav-item">
	    <%= link_to "Log Out", destroy_user_session_path, method: :delete, class:"text-decoration-none text-secondary"%>
     </li>
	      <% else %>
	    <%#= link_to "sign up", new_user_registration_path %>
      <li class="nav-item">
      <%= link_to "Sign In", new_user_session_path, class:"text-decoration-none text-secondary mx-2" %>
       </li>
    <% end %>
      
    </ul>
  </div>
</nav>



<%# if user_signed_in? %>
	    <%#= current_user.email %>
<%# end %>
	


    <%= yield %>
  </body>
</html>
