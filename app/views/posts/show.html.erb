<h1>Posts#show</h1>
<p>Find me in app/views/posts/show.html.erb</p>

<div class="container">
   <%#= @posts.each do |post| %>
   <% if current_user %>
    <% if current_user.id == @post.user.id %>
                <%= link_to "Edit", edit_post_path(@post), class: "btn btn-warning" %>
                <%= link_to "Delete", post_path(@post), method: "delete", data:{ confirm: "Are you sure you want to delete this post?"}, class: "btn btn-danger" %>
        <% end %>
    <% end %>
    <div class="text-center">

        <div><%= image_tag @post.post_image, height: 200, width: 200 %></div>

        <div class="card mt-4 "><%= @post.caption %></div>
    </div>
    

